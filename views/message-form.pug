extends layout

block content
    div(class='grid-container')
        div(class='container')
            h1(class='switch-form') Writing a Message
            form(method='POST')
                div.form-group(class='user-form')
                    label(for='title') Title
                    input#title.form-control(type='text', name='title' required)
                    label(for='text') Text
                    textarea#text.form-control(name='text' required)
                    button.btn.btn-primary(type='submit' class='submitButton') Post